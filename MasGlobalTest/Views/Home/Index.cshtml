@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="jumbotron">
    <h1>MASGLOBAL Consulting</h1>
    <p class="lead"> Senior .NET Developer Hands On Test </p>
</div>
<div class="row">
    <div class="row col-lg-12">
        <div class="container">
            <h1 class="mt-4">Employee Settings</h1>
            <div class="card">
                <div class="card-header"><i class="fas fa-table mr-1"></i>Employee</div>
                <div class="card-body">
                    <div class="row col-lg-8" >
                        <input type="text" id="employeeId" class="form-control col-4" placeholder="Identification Number" />
                        <input type="button" id="btnSearch" class="col-2 btn btn-primary btn-sm" value="Search" />
                    </div>
                    <br>
                    <div class="table-responsive">
                        <div id="spinnerTable" class="spinner-border text-success hide" role="status">
                            <span class="sr-only">Loading...</span>
                        </div>
                        <table class="table table-striped table-bordered" id="employeesTable" width="100%" cellspacing="0">
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/Scripts/Employee/index.js"></script>
}
